<h1>Add a Cocktail</h1>

<div class="container">
<%= simple_form_for @cocktail do |f| %>
  <%= f.input :name %>
  <%= f.association :ingredients %>
  <%= f.association :doses %>
  <%= f.submit "Add cocktail", class: "btn btn-primary" %>
  <%= f.button :button, 'Cancel', type: :reset, class: 'btn btn-danger' %>
  <%= link_to "Back to Home Page", cocktails_path, class: 'btn btn-outline-primary'%>
<% end %>
</div>
