<div class="section-show">
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.0),rgba(0,0,0,0)), url(https://cdn.dribbble.com/users/3107060/screenshots/5997073/2cock.gif);">
    <div class="container">
      <h1>Misty cocktail brings <strong>amazing cocktails</strong> from <strong>fine ingredients</strong>!</h1>
      <p>Change your life.</p>
      <%= link_to 'Add a cocktail', new_cocktail_path, class: "btn btn-outline-primary my-2 my-sm-0" %>
    </div>
  </div>
</div>


<div class="section-show">
  <div class="cards-home-cocktail">
    <% @cocktails.each do |cocktail| %>
      <%= link_to cocktail_path(cocktail) do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/1600x900/?cocktail&rand=<%= rand( 9999) %>)">
        <%= cocktail.name %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

