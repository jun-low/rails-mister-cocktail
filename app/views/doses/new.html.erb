<h1>Add your new Dose for <%= @cocktail.name %></h1>

<div class="container">
<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient %>
  <%= f.submit "Add dose", class: "btn btn-primary" %>
  <%= f.button :button, 'Cancel', type: :reset, class: 'btn btn-danger' %>
  <%= link_to "Back to Home Page", cocktails_path, class: 'btn btn-outline-primary'%>
<% end %>
</div>
